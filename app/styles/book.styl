.book

    &__name
        display inline-block
        padding 1em
        width 65%

        @media(max-width: 880px)
            width inherit
            display block

    &__original
        display inline-block
        border: 1px solid #EFEF1F
        padding 0.3em 1em
        vertical-align top
        margin 1em
        width 25%

        @media(max-width: 880px)
            width inherit
            display block

    &__blocktitle
        font-style italic

    &__title
        margin 0

        &_original
            margin-bootom -0.3em

    &__body
        width 65%
        padding 1em

        @media(max-width: 880px)
            width inherit

    &__image
        width 100px
        padding 0.5em

    &__caption
        background-color #FFFFE7
        padding 1em

    &__comment
        padding 1em

    &__section
        display table-cell
        vertical-align top
