.grid
    display flex
    flex-wrap wrap
    padding 0 4px
    justify-content center

    &__column
        flex 25%
        max-width 25%
        padding 0 4px

        @media screen and (max-width 800px)
            flex 45%
            max-width 50%

        @media screen and (max-width 600px)
            max-width 100%
